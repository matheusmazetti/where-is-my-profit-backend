// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  recipe Recipes[]

  @@map("users")
}

model Recipes {
  id Int @id @default(autoincrement())
  recipeName String
  ingredients Json 
  userId Int
  users Users @relation(fields: [userId], references: [id])

  @@map("recipes")
}
